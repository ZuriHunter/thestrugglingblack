<p id="notice"><%= notice %></p>


<div class="row">
<% @posts.each do |post| %>
<div class= "col l3">
  <div class= "card medium">
    <div class="card-image waves-effect waves-block waves-light">
      <%= image_tag post.main_image_url %>
      <!--Materialize, JavaScript, Media, MaterialBoxed -->
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4"><%= post.title %></span>
      <p><%= link_to 'Show', post %></p>
      <p><%= link_to 'Edit', edit_post_path(post) %></p>
      <p><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4"><%= post.title %><i class="material-icons right">Close</i></span>
      <p><%=post.post_desc %> </p>
    </div>
  </div>
</div>
  <% end %>
</div> 
  

<%= link_to 'New Post', new_post_path %> 





<%= form_for(@post, :html =>{ multipart: true}) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="field">
   <%= f.label :main_image, "Import Image" %><br>
   <%= f.file_field :main_image %>
  </div>
<br>
  
  <div class="input-field">
    <%= f.label :title, "Post Title" %><br>
    <%= f.text_field :title, class:"form-style" %>
  </div>
<br>
 <div class="input-field">
   <%= f.label :post_desc, "Post Description" %><br>
   <%= f.text_field :post_desc, class:"form-style" %>
  </div>
<br>
  <div class="input-field ">
    <%= f.label :body, "Post Body" %><br>
    <%= f.text_area :body, class: "materialize-textarea form-style" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn" %>
  </div>
<% end %>
